{
  "extends": "./node_modules\\google-ts-style\\tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "build",
    "target": "es5",
    "lib": ["es2016", "dom"],
    "moduleResolution": "node",
    "typeRoots": ["../node_modules/@types"],
    "types":
     [
      "node"
    ],
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
